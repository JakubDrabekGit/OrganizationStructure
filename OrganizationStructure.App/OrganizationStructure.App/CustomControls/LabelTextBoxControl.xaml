<UserControl x:Class="OrganizationStructure.App.CustomControls.LabelTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrganizationStructure.App.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Root" Margin="10">
        <Grid.ColumnDefinitions>
            <!--SharedSizeGroup="Labels"-->
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="{Binding Label}" Margin="10 0" Style="{StaticResource BaseText}"/>
        <TextBox Grid.Column="1" Text="{Binding Text}" />
    </Grid>
</UserControl>
